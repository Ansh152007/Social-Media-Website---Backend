<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h2>
            <div>
                <a href="/pins/create" class="btn btn-primary me-2">
                    <i class="fas fa-plus me-1"></i>Create Pin
                </a>
                <a href="/boards/create" class="btn btn-outline-primary">
                    <i class="fas fa-plus me-1"></i>Create Board
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-thumbtack fa-3x text-primary mb-3"></i>
                <h5 class="card-title">My Pins</h5>
                <p class="card-text fs-2 fw-bold"><%= user.totalPins || 0 %></p>
                <a href="/pins/my-pins" class="btn btn-primary">View Pins</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-clipboard fa-3x text-success mb-3"></i>
                <h5 class="card-title">My Boards</h5>
                <p class="card-text fs-2 fw-bold"><%= user.totalBoards || 0 %></p>
                <a href="/boards/my-boards" class="btn btn-success">View Boards</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-user fa-3x text-info mb-3"></i>
                <h5 class="card-title">Profile</h5>
                <p class="card-text">Manage your account</p>
                <a href="/profile" class="btn btn-info">Edit Profile</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-clock me-2"></i>Recent Activity</h5>
            </div>
            <div class="card-body">
                <% if (user.createdPins && user.createdPins.length > 0) { %>
                    <div class="row">
                        <% user.createdPins.slice(0, 4).forEach(pin => { %>
                            <div class="col-md-3 mb-3">
                                <div class="card">
                                    <% if (pin.image) { %>
                                        <img src="<%= pin.image %>" class="card-img-top" alt="<%= pin.title %>" style="height: 200px; object-fit: cover;">
                                    <% } %>
                                    <div class="card-body p-2">
                                        <h6 class="card-title small"><%= pin.title %></h6>
                                        <p class="card-text small text-muted"><%= pin.description.substring(0, 50) %>...</p>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-thumbtack fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No pins yet</h5>
                        <p class="text-muted">Create your first pin to get started!</p>
                        <a href="/pins/create" class="btn btn-primary">Create Pin</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
